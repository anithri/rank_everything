<% if flash.any? %>
  <div class="toast toast-top toast-center">
    <% if flash[:notice] %>
      <%= render "shared/flash_message", style: "info", content: flash[:notice] %>
    <% end %>
    <% if flash[:alert] %>
      <%= render "shared/flash_message", style: "error", content: flash[:alert] %>
    <% end %>
  </div>
<% end %>