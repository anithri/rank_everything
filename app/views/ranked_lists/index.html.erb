<% content_for :title, "Ranked lists" %>

<turbo-frame id="ranked_lists" %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center mb-4">
      <h1 class="font-bold text-4xl">Ranked lists</h1>
      <%= link_to "New ranked list", new_team_ranked_list_path(@team), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>

    <div class="flex justify-between items-center">
      <div id="ranked_lists" class="min-w-full divide-y divide-gray-200 space-y-5">
        <% if @ranked_lists.any? %>
          <% @ranked_lists.each do |ranked_list| %>
            <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
              <%= render partial: "list_item", locals: { ranked_list: } %>
              <div class="join join-horizontal">
                <%= link_to "Show", ranked_list, class: "btn btn-primary btn-sm join-item" %>
                <%= link_to "Edit", edit_ranked_list_path(ranked_list), class: "btn-success btn btn-sm join-item" %>
                <%= button_to "Destroy", ranked_list, method: :delete, class: "btn btn-error btn-sm join-item", data: { turbo_confirm: "Are you sure?" } %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-center my-10">No ranked lists found.</p>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
