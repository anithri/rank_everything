<% content_for :title, "Memberships" %>

<turbo-frame id="memberships">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center mb-4">
      <h1 class="font-bold text-4xl">Memberships</h1>
      <%= link_to "New membership", new_team_membership_path(@team), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>

    <div id="memberships" class="min-w-full divide-y divide-gray-200 space-y-5">
      <% if @memberships.any? %>
        <% @memberships.each do |membership| %>
          <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
            <%= render partial: "list_item", locals: { membership: } %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center my-10">No memberships found.</p>
      <% end %>
    </div>
  </div>
</turbo-frame>
