<% content_for :title, "Memberships" %>

<turbo-frame id="memberships">
  <div class="w-full">
    <% if CurrentTeam.policy.create? %>
      <div class="flex justify-between items-center mb-4">
        <h1 class="font-bold text-2xl">Memberships</h1>
        <%= link_to "New membership", new_team_membership_path(@team), class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>

    <div id="memberships" class="min-w-full">
      <% if @memberships.any? %>
        <% @memberships.each do |membership| %>
          <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0 odd:bg-base-200 even:bg-base-300">
            <%= render partial: "list_item", locals: { membership: } %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center my-10">No memberships found.</p>
      <% end %>
    </div>
  </div>
</turbo-frame>
