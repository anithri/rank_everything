<% content_for :title, "Showing team" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing team</h1>

  <%= render @team %>

  <% if TeamPolicy.new(Current.user, @team).edit? %>
    <%= link_to "Edit this team", edit_team_path(@team), class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back to teams", teams_path, class: "btn btn-info" %>

  <h1>Members</h1>
  <table class="table table-borderless">
    <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
    </tr>
    </thead>
    <tbody>
    <% @team.memberships.each do |member| %>
      <tr>
        <td>
          <%= member.user.name %>
        </td>
        <td>
          <%= member.role.titleize %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
