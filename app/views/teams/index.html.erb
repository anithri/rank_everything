<% content_for :title, "Teams" %>

<div class="container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center content-center py-2">
    <h1 class="font-bold text-4xl">Teams</h1>
    <%= link_to "New team", new_team_path, class: "btn btn-accent py-2" %>
  </div>

  <div id="teams" class="min-w-full">
    <% if @teams.any? %>
      <% @teams.each do |team| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-1 sm:pb-0 odd:bg-base-100 even:bg-base-200">
          <%= render team %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", team, class: "px-3.5 btn btn-primary btn-sm" %>
            <% if TeamPolicy.new(Current.user, team).edit? %>
              <%= link_to "Edit", edit_team_path(team), class: "px-3.5 btn btn-warning btn-sm" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No teams found.</p>
    <% end %>
  </div>
</div>
